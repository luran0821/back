extends layout/layout
block html
    -var isIndex = 1
    -var bodyClass = 'login'
block body
    img(src="./img/logo.png").logo
    .container
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Please Sign In
                    .panel-body
                        form(role='form')
                            fieldset
                                .form-group
                                    input.form-control.user(placeholder='用户名', name='用户名', type='用户名', autofocus='')
                                .form-group
                                    input.form-control.pass(placeholder='密码', name='密码', type='password', value='')
                                // Change this to a button or input when using this as a form
                                a.btn.btn-lg.btn-success.btn-block(href='###') 登录
