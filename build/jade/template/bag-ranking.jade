                                td
                                td
                                td
                                td
                                td
                                td
                                td
block script
    script#dotpl-ranking(type='text/x-dot-template')
        |{{ for(var i=0;i<=it[0].length-1;i++) { }}
        tr
            | {{ for(var v=0; v<it.length; v++ ) { }}
            td {{=it[v][i]}}
            | {{ } }}
        |{{ } }}