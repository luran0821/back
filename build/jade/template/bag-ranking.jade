extends ../layout/layout
block html
    -var bodyClass = 'bag-ranking'
block body
    include ../modules/navigation
        block center
            .title
                .row
                    .col-lg-12
                        h4.page-header 萌袋管理
                        ul
                            li
                                a(href="index.html") 发布萌袋
                            li
                                a(href="inquiry-bag.html") 查询萌袋
                            li.active
                                a(href="bag-ranking.html") 萌袋余额排行
            .center
                .col-lg-12
                    table#table-ranking.table.table-bordered.table-hover.dataTable.no-footer
