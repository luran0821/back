                                th 昵称
                                th 白名单等级
                                th 添加时间
                                th 添加人
                                th 添加理由
                                th 管理
                        tbody#tbody
                            tr.gradeA
                                td
                                td
                                td
                                td
                                td
                                td
                                td
                .maker.none
                    .out
                        p
                        .btn.btn-primary.btn-right 确定
                .maker2.none
                    .out
                        input.form-control(type="text",placeholder="冻结原因",maxlength="100")
                        .btn.btn-primary 确定