extends ../layout/layout
block html
    -var bodyClass = 'white-query'
block body
    include ../modules/navigation
        block center
            .title
                .row
                    .col-lg-12
                        h4.page-header  用户管理
                        ul
                            li
                                a(href="user-manage.html") 查询用户
                            li
                                a(href="freeze-manage.html") 冻结
                            li.active
                                a(href="white-list.html") 白名单
            .center
                .top
                    .btn.btn-default
                        a(href="white-list.html")
                            | 添加
                    .btn.btn-default.btn-primary
                        a(href="white-query.html" style="color:#fff")
                            | 查询
                .searchuid
                    input.form-control.input-sm(placeholder="UID")
                    .btn.btn-primary 查询
                .col-lg-12
                    table#tablewhite-query.table.table-bordered.table-hover.dataTable.no-footer
