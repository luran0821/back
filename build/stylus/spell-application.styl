.spell-application
  .maker
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
    .out
      width: 300px;
      height: auto;
      position: absolute;
      min-height: 200px;
      background: #fff;
      left: 50%;
      top: 50%;
      margin-left: -150px;
      margin-top: -100px;
      border-radius: 10px;
      padding: 25px;
      padding-top: 50px;
      .btn
        width: 100px;
        margin: 0 auto;
        display: block;
        margin-top: 35px;
  .top
    width 300px
    margin 20px auto
    overflow hidden
    .btn
      float left
      width 100px
  .opacity
    opacity 0
  .col-lg-9
    width 100%
    height 100%
    position absolute
    left 0
    top 0
    //background rgba(0,0,0,.5)
    z-index 1000
    >div
      width: 60%;
      margin: 0 auto;
      margin-top: 15%;
      background: #fff;
      border-radius: 5px;
      /* border: 0; */
      padding: 30px;
      min-height 400p
    .recovery
      >div:last-child
        text-align left
        padding 0 10px
        line-height 1.8
    ul
      padding 0
      border-top 2px solid #ddd
      border-left 2px solid #ddd
      margin 0
      li
        overflow hidden
        div:first-child
          width 30%
        div
          float left
          width 70%
          line-height 35px
          text-align center
          p
            overflow hidden
            width 420px
            margin 0 auto
          img
            width  80px
            height 80px
            margin-top 10px
            float left
            margin-left 30px
            margin-bottom 10px
          textarea
            float left
            margin 10px 4% 10px 6%
            //min-width 260px
            min-height 50px
            width 50%
          .choice
            width 40%
            span
              float left
              margin 17.5px 5%
              width 40%
              height 35px
       .border
         border-bottom 2px solid #ddd
         border-right 2px solid #ddd
    .bigimg
      position absolute
      top 20%
      width 500px
      left 50%
      margin-left -250px
      img
        width 100%
.visibility
  visibility:hidden;